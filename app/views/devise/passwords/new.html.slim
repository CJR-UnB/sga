= content_for :text_logo, 'Recuperar Senha'

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|

  .form-group
    .input-group
      .input-group-addon
        i.fa.fa-envelope
      = f.email_field :email, autofocus: true, class: 'form-control', required: true

  .row

    .col-sm-6.col-xs-12
      = f.submit 'Enviar instruções', class: 'btn btn-success btn-block'
    .col-sm-6.col-xs-12
      = link_to 'Ou login', '/login', class: 'btn btn-primary btn-block'