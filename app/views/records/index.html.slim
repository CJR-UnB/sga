.row style="padding-top: 10px"

  .col-sm-2.col-xs-12
    = image_tag 'cjr.png', class: 'logo'

  .col-sm-10.col-xs-12
  
    h1.text-right
      | Atas da CJR

hr.divider

.row

  = form_tag('/select_sector_records', remote: true) do
    
    .col-sm-9.col-xs-6
      = collection_select :sector, :id, Sector.all, 
                          :id, :name, { prompt: false, 
                                        selected: session[:sector_id] },
                          class:'form-control'
    .col-sm-3.col-xs-6
      = button_tag type: "submit", class: "btn btn-primary btn-block" do
        i.fa.fa-search
        | &nbsp;&nbsp;Buscar atas 

#sector_records style="padding-top: 20px"
  - unless session[:sector_id].nil?
    = render 'sector_records', sector: @sector = Sector.find(session[:sector_id])